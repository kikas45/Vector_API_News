<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:selectableItemBackgroundBorderless"
        android:padding="10dp"
        android:src="@drawable/ic_launcher_foreground"
        android:visibility="visible"
        app:civ_border_color="#2196F3"
        app:civ_border_width="0.7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        style="@style/Base.Theme.VectoNews"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="start"
        android:maxLines="1"
        android:text="Vector News "
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewer"
        app:layout_constraintTop_toTopOf="@+id/imageViewer"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewer" />


    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup_year"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/textHeadLinesUs"
            style="@style/Custom_Chip_group_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Us"
            android:textSize="16sp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/textHeadLinesNigeria"
            style="@style/Custom_Chip_group_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nigeria"
            android:textSize="16sp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/textHeadLinesCanada"
            style="@style/Custom_Chip_group_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Canada"
            android:textSize="16sp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/textHeadLinesSouthAfrica"
            style="@style/Custom_Chip_group_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="South Africa"
            android:textSize="16sp" />


    </com.google.android.material.chip.ChipGroup>


    <com.google.android.material.chip.Chip
        android:id="@+id/settings"
        style="@style/Custom_Chip_group_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:checkable="false"
        android:text="Settings"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chipGroup_year" />

    <TextView
        android:id="@+id/textView4"
        style="@style/Base.Theme.VectoNews"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:text="Get headlines from "
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />


</androidx.constraintlayout.widget.ConstraintLayout>