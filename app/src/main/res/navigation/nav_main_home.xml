<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main_home"
    app:startDestination="@id/termsFragment">
    <fragment
        android:id="@+id/main_Home_Fragment"
        android:name="com.example.vectonews.ui.Main_Home_Fragment"
        android:label="fragment_main_home"
        tools:layout="@layout/fragment_main_home">
        <action
            android:id="@+id/action_main_Home_Fragment_to_main_Save_Fragment"
            app:destination="@id/main_Save_Fragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            app:popUpTo="@id/main_Save_Fragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_main_Home_Fragment_to_setting_theme_Fragment"
            app:destination="@id/setting_theme_Fragment"
            app:enterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/slide_out_right" />


        <!--app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@android:anim/fade_out"
        app:popEnterAnim="@android:anim/fade_in"
        app:popExitAnim="@android:anim/fade_out"-->

        <action
            android:id="@+id/action_main_Home_Fragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:popUpTo="@id/detailFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/main_Save_Fragment"
        android:name="com.example.vectonews.ui.Main_Search_History_Fragment"
        android:label="fragment_main_save"
        tools:layout="@layout/fragment_search_history">
        <action
            android:id="@+id/action_main_Save_Fragment_to_searchFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/setting_theme_Fragment"
        android:name="com.example.vectonews.settings.Setting_theme_Fragment"
        android:label="fragment_setting_theme"
        tools:layout="@layout/fragment_setting_theme" />
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.vectonews.ui.detailfragments.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/action_detailFragment_to_commentFragment"
            app:destination="@id/commentFragment"
            app:popUpTo="@id/commentFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/termsFragment"
        android:name="com.example.vectonews.ui.TermsFragment"
        android:label="fragment_terms"
        tools:layout="@layout/fragment_terms">
        <action
            android:id="@+id/action_termsFragment_to_main_Home_Fragment2"
            app:destination="@id/main_Home_Fragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            app:popUpTo="@id/termsFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/commentFragment"
        android:name="com.example.vectonews.comments.CommentFragment"
        android:label="fragment_comment"
        tools:layout="@layout/fragment_comment" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.vectonews.ui.onItemSearched.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_main_Save_Fragment"
            app:destination="@id/main_Save_Fragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/action_searchFragment_to_detailFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:popExitAnim="@android:anim/slide_out_right"
            app:destination="@id/detailFragment" />
    </fragment>
</navigation>