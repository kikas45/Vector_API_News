<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VectorNews" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryVariant">#039BE5</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">#039BE5</item>  <!--this affect prpgressbar-->
        <item name="colorSecondaryVariant">#039BE5</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" >@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:navigationBarColor">@color/dark_bottom_nav</item>
        <item name="colorControlNormal">#FFFFFF</item>




    </style>








    <!--for round download Bottom sheet -->
    <style name="roundDowload">
        <item name="android:background">@drawable/bottom_sheet_bg_extreme_dark</item>
    </style>



    <!--        This would style the search bar on the main home Fragment -->
    <style name="searchBarRound">
        <item name="android:background">@drawable/round_search_corners_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="searchRectangle">
        <item name="android:background">@drawable/round_search_corners_dark_rectangle</item>
        <item name="android:textColor">@android:color/white</item>
    </style>



    <style name="styleForTextAndButton">
        <item name="android:background">@drawable/round_text_corners_dark_rectangle</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <!--   this work for switching background colors and use in Main save Fragment constrain -->
    <style name="simpleGrayColor">
        <item name="android:background">@color/black_shade_1</item>
    </style>



    <style name="simpleViewDivider">
        <item name="android:background">#E8EDFA</item>
    </style>


    <!--   this work for switching background for all parent layouts  -->
    <style name="allParentsLayouts">
        <item name="android:background">@color/black_gray_1</item>
    </style>



    <!--   this works for the bottom navigation background   -->
    <style name="bottomNavBar">
        <item name="android:background">@color/dark_bottom_nav</item>
    </style>


    <!--   this works for the unsplash Layout xml for recycler view   -->
    <style name="unsplashtsyle">
        <item name="android:background">@drawable/gradient_dark</item>
    </style>




    <!-- This is for our app themes -->

    <style name="MyAppThemes" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black_shade_1</item>

        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_round_logo</item>

        <item name="postSplashScreenTheme">@style/Base.Theme.VectorNews</item>

        <!--  <item name="windowSplashScreenAnimationDuration">200</item>-->

        <item name="windowSplashScreenIconBackgroundColor">@color/black_shade_1</item>

    </style>





    <style name="Custom_Chip_group_style" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">#FFFFFF</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
        <item name="chipEndPadding">5dp</item>
        <item name="rippleColor">@color/whiteAlpah</item>
    </style>






    <style name="BottomSheetDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:elevation">0dp</item>
        <item name="android:background">@color/black_gray_1</item>
    </style>



</resources>