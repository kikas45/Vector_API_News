<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VectoNews" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#575454</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">#E8EDFA</item>
        <item name="colorControlNormal">#000000</item>




    </style>






    <!--for round download Bottom sheet -->
    <style name="roundDowload">
        <item name="android:background">@drawable/bottom_sheet_bg</item>

    </style>


    <!--        This would style the search bar on the main home Fragment -->
    <style name="searchBarRound">
        <item name="android:background">@drawable/round_search_corners_light</item>
        <item name="android:textColor">@android:color/black</item>
    </style>



    <style name="searchRectangle">
        <item name="android:background">@drawable/round_search_corners_light_rectangle</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="styleForTextAndButton">
        <item name="android:background">@drawable/round_text_corners_light_rectangle</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--   this work for switching background colors found in main fragment save constraion  -->
    <style name="simpleGrayColor">
        <item name="android:background">#E8EDFA</item>
    </style>

    <style name="simpleViewDivider">
        <item name="android:background">@color/black</item>
    </style>



    <!--   this work for switching background for all parent layouts  -->
    <style name="allParentsLayouts">
        <item name="android:background">#FFFFFF</item>
    </style>



    <!--   this works for the bottom navigation background   -->
    <style name="bottomNavBar">
        <item name="android:background">#E8EDFA</item>


    </style>


    <!--   this works for the unsplash Layout xml for recycler view   -->
    <style name="unsplashtsyle">
        <item name="android:background">@drawable/gradient_light</item>
    </style>



    <!-- This is for our app themes -->

    <style name="MyAppThemes" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>

        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>

        <item name="postSplashScreenTheme">@style/Base.Theme.VectoNews</item>

        <!--  <item name="windowSplashScreenAnimationDuration">200</item>-->

        <item name="windowSplashScreenIconBackgroundColor">@color/white</item>

    </style>





    <style name="Custom_Chip_group_style" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color22</item>
        <item name="android:textColor">@color/chip_text_color22</item>
        <item name="checkedIconTint">#FFFFFF</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
        <item name="chipEndPadding">5dp</item>
        <item name="rippleColor">@color/whiteAlpah</item>
    </style>





    <style name="BottomSheetDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:elevation">0dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

</resources>